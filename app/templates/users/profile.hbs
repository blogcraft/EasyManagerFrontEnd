<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Profile</h1>
	</div>
</div>
<div class="row">
  <form role="form">
    <div class="col-lg-6">
			<div id="response">
				<div class='alert alert-success' style="display:none;">Data successfully updated</div>
				<div class='alert alert-danger' style="display:none;">Something went wrong, please try again</div>
			</div>
      <div class="row">
    		<div class="col-lg-12">
    			<div class="form-group input-group">
    				<span class="input-group-addon"><span class="fa fa-user form-icon"></span></span>
						{{input type="text" class="form-control" placeholder="Name" value=model.firstName}}
    			</div>
    		</div>
    		<div class="col-lg-12">
    			<div class="form-group input-group">
    				<span class="input-group-addon"><span class="fa fa-user form-icon"></span></span>
						{{input type="text" class="form-control" placeholder="Lastname" value=model.lastName}}
    			</div>
    		</div>
    		<div class="col-lg-12">
    			<div class="form-group input-group">
    				<span class="input-group-addon"><span class="fa fa-envelope form-icon"></span></span>
						{{input type="email" class="form-control" placeholder="Email" value=model.email}}
    			</div>
    		</div>
    		<div class="col-lg-12">
      		<div class="form-group input-group">
      			<span class="input-group-addon"><span class="fa fa-user-md form-icon"></span></span>
						{{input type="text" class="form-control" placeholder="Profession" value=model.profession}}
      		</div>
    		</div>
    		<div class="col-lg-12">
    			<button {{action "save" model}} type="submit" class="pull-right btn btn-primary">Save</button>
    		</div>
				<div class="clearfix"></div>
      </div>
    </div>
  </form>
</div>
