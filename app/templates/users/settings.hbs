<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Settings</h1>
	</div>
</div>
<div class="col-lg-6">
  <div class="row">
		<div id="response">
			<div class='alert alert-success' style="display:none;">Settings successfully updated</div>
		</div>
  	<div class="form-group input-group">
  		<span class="input-group-addon"><i class="fa fa-dollar form-icon"></i></span>
			{{input type="text" valueBinding=model.datePrice id="datePrice" key-up="change" class="form-control" placeholder="Default Appointment Price" value=model.firstObject.datePrice}}
  	</div>
  	<div>
  		<button {{action "save" model}} type="submit" class="pull-right btn btn-primary">Save</button>
  	</div>
  </div>
</div>
