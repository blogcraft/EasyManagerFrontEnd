<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Settings</h1>
	</div>
</div>
<div class="col-lg-6">
  <div class="row">
		<div id="response">
			<div class='alert alert-success' style="display:none;">Data successfully updated</div>
			<div class='alert alert-danger' style="display:none;">Something went wrong, please try again</div>
		</div>
	  <form role="form">
			{{#each model as |setting|}}
			<div class="form-group row">
				<label for="{{setting.name}}" class="col-sm-2 form-control-label">{{setting.name}}</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" value="{{setting.value}}" id="{{setting.name}}" name="{{setting.id}}" placeholder="{{setting.name}}">
				</div>
			</div>
			{{/each}}
	  	<div>
	  		<button type="submit" class="pull-right btn btn-primary" {{action "save"}}>Save</button>
	  	</div>
		</form>
  </div>
</div>
