<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Payments</h1>
	</div>
	<!-- /.col-lg-12 -->
</div>


<div class="row">
	<div class="col-lg-12">
		<div class="dataTable_wrapper">
			<table class="table table-striped table-bordered table-hover" id="payments">
				<thead>
					<tr>
						<th>Firstname</th>
						<th>Lastname</th>
						<th>Date</th>
						<th>Paid</th>
					</tr>
				</thead>
				<tbody>
					{{#each model as |invoice|}}
						<tr class="even">
							<td>{{invoice.clientName}}</td>
							<td>{{invoice.clientLastName}}</td>
							<td>{{formatDate invoice.date}}</td>
							<td>
								<input type="checkbox" checked={{invoice.paid}} onclick={{action "pay" invoice.id}}/>
							</td>
						</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
	</div>
	<!-- /.col-lg-12 -->
</div>
