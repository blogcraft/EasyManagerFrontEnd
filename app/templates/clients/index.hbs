<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Clients</h1>
	</div>
	<!-- /.col-lg-12 -->
</div>
<div class="row">
	<div class="col-lg-12">
		<div class="dataTable_wrapper">
			<table class="table table-striped table-bordered table-hover" id="my-clients">
				<thead>
					<tr>
						<th>Firstname</th>
						<th>Lastname</th>
						<th>Phone</th>
						<th>
							{{#link-to 'clients.new'}}<i class="fa fa-plus-square-o"></i> Add{{/link-to}}
						</th>
					</tr>
				</thead>
				<tbody>
					{{#each model as |client|}}
					<tr class="even">
						<td>{{client.firstname}}</td>
						<td>{{client.lastname}}</td>
						<td>{{client.phone}}</td>
						<td>
							<a href="#"><span class="fa fa-trash-o"></span></a>
							<a href="#"><span class="fa fa-edit"></span></a>
							{{#link-to "clients.show" client}}<span class="fa fa-eye"></span>{{/link-to}}
						</td>
					</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
	</div>
	<!-- /.col-lg-12 -->
</div>
