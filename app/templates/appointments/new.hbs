<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">New Appointment</h1>
	</div>
</div>
<div class="row">
	<div class="col-lg-6">
		<div id="response">
			<div class="alert alert-success" style="display:none">
				Appointment created to see details <a href="#" class="alert-link">click here</a>.
			</div>
			<div class="alert alert-danger" style="display:none">
				You already have an appointment at the same time.
			</div>
		</div>
		<form role="form">
			<div class="form-group input-group">
				<span class="input-group-addon"><span class="fa fa-user form-icon"></span></span>
				{{drop-down-client clients=model.clients client=model.appointment.clientId}}
			</div>
			<div class="form-group input-group">
				<span class="input-group-addon"><span class="fa fa-calendar form-icon"></span></span>
				{{input type="date" class="form-control" value=model.appointment.date}}
			</div>
			<div class="form-group input-group">
				<span class="input-group-addon"><span class="fa fa-clock-o form-icon"></span></span>
				{{input type="time" class="form-control" value=model.appointment.time}}
			</div>
			<div class="form-group input-group">
				<span class="input-group-addon"><span class="fa fa-map-marker form-icon"></span></span>
				{{input type="text" class="form-control" value=model.appointment.address}}
			</div>
			<div class="form-group input-group">
				<span class="input-group-addon"><span class="fa fa-sticky-note form-icon"></span></span>
				{{textarea type="text" class="form-control" rows="3" value=model.appointment.note}}
			</div>
			<div class="form-group input-group">
				<span class="input-group-addon"><i class="fa fa-dollar form-icon"></i></span>
				<input type="number" class="form-control" placeholder="Price">
			</div>
			<div class="text-right">
				<button {{action "save" model}} type="submit" class="btn btn-primary">Add</button>
				<button {{action 'cancel'}} type="reset" class="btn btn-default">Clear</button>
			</div>
		</form>
	</div>
</div>
