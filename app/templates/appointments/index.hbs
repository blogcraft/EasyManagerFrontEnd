<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">My Appointments</h1>
	</div>
	<!-- /.col-lg-12 -->
</div>
<div class="row">
<div class="col-lg-12">
	<div class="dataTable_wrapper">
		<table class="table table-striped table-bordered table-hover" id="my-dates">
			<thead>
				<tr>
					<th colspan=5>TODAY</th>
				</tr>
			</thead>
			<thead>
				<tr>
					<th>Date</th>
					<th>Time</th>
					<th>Name</th>
					<th>Confirm</th>
					<th>Assist</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				{{#each model as |appointment|}}
				<tr class="even">
					<td>{{appointment.date}}</td>
					<td>{{appointment.time}}</td>
					<td>{{appointment.client.first_name}} {{appointment.client.last_name}}</td>
					<td>{{input type="checkbox" name="confirmation-1" checked=appointment.confirm}}</td>
					<td>{{input type="checkbox" name="assist-1" checked=appointment.assist}}</td>
					<td>
						{{#link-to 'appointments.delete' appointment}}<span class="fa fa-trash-o"></span>{{/link-to}}
						<a href="#"><span class="fa fa-edit"></span></a>
						{{#link-to 'appointments.show' appointment}}<span class="fa fa-eye"></span>{{/link-to}}
					</td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</div>
</div>
