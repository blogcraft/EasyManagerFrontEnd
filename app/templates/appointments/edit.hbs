<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Edit Appointment</h1>
	</div>
</div>
<div class="row">
	<div id="response">
		<div class="alert alert-success" style="display:none">
			Appointment created to see details <a href="#" class="alert-link">click here</a>.
		</div>
		<div class="alert alert-danger" style="display:none">
			You already have an appointment at the same time.
		</div>
	</div>
	<form role="form">
		<div class="col-sm-6 col-lg-4">
			<div class="form-group input-group" data-toggle="tooltip" title="Client">
				<span class="input-group-addon"><span class="fa fa-user form-icon"></span></span>
				{{drop-down-client clients=model2 clientId=model.clientId title="Clients"}}
			</div>
		</div>
		<div class="col-sm-6 col-lg-4">
			<div class="form-group input-group" data-toggle="tooltip" title="Date">
				<span class="input-group-addon"><span class="fa fa-calendar form-icon"></span></span>
				{{bs-datetimepicker date=model.datetime noIcon=true format="LLL" updateDate=(action (mut model.datetime))}}
			</div>
		</div>
		<div class="col-sm-12 col-lg-4">
			<div class="form-group input-group" data-toggle="tooltip" title="Address">
				<span class="input-group-addon"><span class="fa fa-map-marker form-icon"></span></span>
				{{input type="text" class="form-control" value=model.address}}
			</div>
		</div>
		<div class="col-sm-12">
			<div class="form-group input-group" data-toggle="tooltip" title="Note">
				<span class="input-group-addon"><span class="fa fa-sticky-note form-icon"></span></span>
				{{textarea type="text" class="form-control" rows="5" value=model.note}}
			</div>
		</div>
		<div class="col-sm-offset-6 col-md-offset-8 col-lg-offset-9 col-sm-6 col-md-4 col-lg-3">
			<div class="text-right">
				<button {{action "save" model}} type="submit" class="btn btn-primary">Save</button>
				<button {{action 'cancel'}} type="reset" class="btn btn-default">Cancel</button>
			</div>
		</div>
	</form>
</div>
